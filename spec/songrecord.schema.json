{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SongRecord",
  "type": "object",
  "required": ["id", "title", "events"],
  "properties": {
    "id": { "type": "string" },
    "title": { "type": "string" },
    "artist": { "type": "string" },
    "source": { "type": "string" },
    "project_id": { "type": "string" },
    "events": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["beat_abs", "time_s", "chord"],
        "properties": {
          "beat_abs": { "type": "number" },
          "time_s": { "type": "number" },
          "timecode": { "type": "string" },
          "chord": { "type": "string" },
          "section": { "type": "string" },
          "dur_beats": { "type": "number" },
          "dur_s": { "type": "number" },
          "lyric": { "type": "string" },
          "event_id": { "type": "string" }
        }
      }
    }
  }
}
