{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://dawsheet.dev/spec/chord.schema.json",
  "title": "DAWSheet Chord Definition v1",
  "type": "object",
  "required": [
    "v",
    "chordId",
    "name",
    "intervals"
  ],
  "additionalProperties": false,
  "properties": {
    "v": {
      "const": 1
    },
    "chordId": {
      "type": "string",
      "description": "Unique id for chord quality/voicing"
    },
    "name": {
      "type": "string",
      "description": "Display name, e.g., Major, Minor, Dominant7"
    },
    "aliases": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "intervals": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "pattern": "^(P|m|M|A|d)?\\d+$"
      },
      "description": "e.g., [\"1\",\"3\",\"5\"] or with quality like M3, P5"
    },
    "extensions": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "optional additional intervals"
    }
  },
  "examples": [
    {
      "v": 1,
      "chordId": "maj",
      "name": "Major",
      "aliases": [
        "M",
        ""
      ],
      "intervals": [
        "1",
        "M3",
        "P5"
      ]
    }
  ]
}