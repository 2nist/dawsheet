{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://dawsheet.io/schemas/arrangement.schema.json",
  "title": "DAWSheet Arrangement v1",
  "type": "object",
  "required": ["version", "title", "sections"],
  "properties": {
    "version": { "type": "integer", "const": 1 },
    "title": { "type": "string", "minLength": 1 },
    "bpm": { "type": "number", "minimum": 1 },
    "timeSig": { "type": "string", "pattern": "^\\d{1,2}/\\d{1,2}$" },
    "markers": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "time"],
        "properties": {
          "name": { "type": "string" },
          "time": { "type": "number", "minimum": 0 }
        },
        "additionalProperties": false
      }
    },
    "sections": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["name", "commands"],
        "properties": {
          "name": { "type": "string", "minLength": 1 },
          "repeat": { "type": "integer", "minimum": 1, "default": 1 },
          "commands": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["type"],
              "properties": {
                "type": { "type": "string" },
                "payload": { "type": "object" },
                "at": { "type": "string" }
              },
              "additionalProperties": true
            }
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
